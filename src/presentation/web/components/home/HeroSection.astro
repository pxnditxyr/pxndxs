---
import { Icon } from 'astro-icon/components'
import { getTranslations } from '@/constants/i18n'

const t = getTranslations()
---

<section class="relative z-10 min-h-screen flex items-center justify-center pt-16">
  <div class="max-w-7xl mx-auto px-4 grid md:grid-cols-2 gap-12 items-center">

    <div class="space-y-6 animate-float">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-brand-light/10 dark:bg-brand-accent/10 text-brand-light dark:text-brand-accent text-xs font-bold uppercase tracking-wide">
        <Icon
          name="tabler:code"
          class="min-w-4 min-h-4"
          size={ 16 }
        />
        {t.hero.badge}
      </div>

      <h1 class="text-5xl md:text-7xl font-bold leading-tight">
        {t.hero.title} <br>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-light to-purple-600 dark:from-brand-accent dark:to-brand-dark">
          {t.hero.titleHighlight}
        </span>
      </h1>

      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-lg">
        {t.hero.description}
      </p>

      <div class="flex gap-4 pt-4">
        <a href="#contact" class="px-6 py-3 rounded-lg bg-brand-light dark:bg-brand-accent text-white font-bold hover:opacity-90 transition shadow-lg shadow-brand-light/20">
          {t.hero.contactButton}
        </a>
        <a href="https://github.com/pxnditxyr" target="_blank" class="px-6 py-3 rounded-lg border border-gray-300 dark:border-slate-700 hover:bg-gray-100 dark:hover:bg-slate-800 transition flex items-center gap-2">
          <Icon
            name="tabler:brand-github"
            class="min-w-5 min-h-5"
            size={ 20 }
          />
          {t.hero.githubButton}
        </a>
      </div>
    </div>

    <div class="relative flex justify-center">
      <div class="absolute inset-0 bg-gradient-to-tr from-brand-light to-purple-500 rounded-full opacity-20 blur-3xl animate-pulse"></div>

      <div class="relative glass p-8 rounded-2xl w-full max-w-md border-t border-l border-white/20 shadow-2xl">
        <div class="flex justify-between items-center mb-6">
          <div class="flex gap-2">
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
          </div>
          <span class="text-xs text-gray-500 font-mono">{t.hero.codeFile}</span>
        </div>

        <pre class="font-mono text-xs md:text-sm text-gray-700 dark:text-gray-300 overflow-x-auto whitespace-pre"><span class="text-purple-600 dark:text-purple-400">fn</span> <span class="text-blue-600 dark:text-blue-400">main</span>() &#123;
    <span class="text-purple-600 dark:text-purple-400">let</span> hobbies = vec![
        <span class="text-green-600 dark:text-green-400">"{t.hero.codeHobbies.physics}"</span>,
        <span class="text-green-600 dark:text-green-400">"{t.hero.codeHobbies.ai}"</span>
    ];

    <span class="text-purple-600 dark:text-purple-400">let</span> team = <span class="text-yellow-600 dark:text-yellow-400">Team</span> &#123;
        lead: <span class="text-green-600 dark:text-green-400">"{t.hero.codeTeam.lead}"</span>,
        support: vec![<span class="text-green-600 dark:text-green-400">"{t.hero.codeTeam.panda}"</span>, <span class="text-green-600 dark:text-green-400">"{t.hero.codeTeam.cat}"</span>]
    &#125;;

    <span class="text-gray-500">{t.hero.codeComment}</span>
    team.<span class="text-blue-600 dark:text-blue-400">build_future</span>(hobbies);
&#125;</pre>
      </div>
    </div>
  </div>
</section>
